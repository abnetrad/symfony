{# layout.twig #}
{% block layout %}
    <!DOCTYPE html>
    <html>
    <head>

        {% include '../includes/head.html.twig' %}
     
    </head>

    {% block body %}
    <body>
        {% block header %}
            {% include '../includes/header.html.twig' %}
        {% endblock %}

        {% block breadcrumb %}
            {% include '../includes/breadcrumb.html.twig' %}
        {% endblock %}

        <div class="content content-wrap">
            {% block page %}
                <div class="container">
                    {% block container %}
                        
                    {% endblock %}
                </div>
            {% endblock %}
        </div>

        {% block footer %}
            {% include '../includes/footer.html.twig' %}
        {% endblock %}
    </body>
    {% endblock %}

    </html>
{% endblock %}
