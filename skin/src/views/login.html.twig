{# index.twig #}
{% extends "./extends/layout.html.twig" %}

{% block header %}{% endblock %}
 
{% block body %}
    <body id="login">
        <div class="content">
            <section>
                <div class="text-center mb-90">
                    <img src="images/logo.svg" alt="Ralph Lauren" class="mb-25" width="395">
                    <img src="images/app-title.png" alt="Uniform">
                </div>

                <form action="#" class="form">
                    <div class="form-group">
                        <label for="email" class="sr-only">Email</label>
                        <input type="email" id="email" placeholder="Email">    
                    </div>
                    <div class="form-group">
                        <label for="pwd" class="sr-only"></label>
                        <input type="password" id="pwd" placeholder="Password">
                    </div>
                    <div class="text-right mb-30">
                        <a href="#" class="under fs12">Forgot password ?</a>    
                    </div>
                    <div class="text-right">
                        <button class="btn btn-gray">OK</button>
                    </div>
                </form>
            </section>
        </div>
        
        {% include 'includes/footer.html.twig' %}
    </body>
{% endblock %}
